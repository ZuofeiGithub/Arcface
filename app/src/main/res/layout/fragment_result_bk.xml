<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/result_bk"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="600dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:padding="30dp"
            android:background="@drawable/circle"
            android:id="@+id/circle_image"
           />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/age_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/age_bk"
                android:gravity="center"
                android:textColor="#f13872"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/face_descript"
                android:gravity="center"
                android:background="@drawable/descript_bk"
                android:textSize="25sp" />
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/label_fraglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/show_lablel"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#010101"
        android:background="@drawable/advance_label"/>
    <FrameLayout
        android:background="#010001"
        android:alpha="0.8"
        android:visibility="gone"
        android:id="@+id/resultfraglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>
